// index.pug
doctype html 
html 
    head 
        title Shreya's Dance Academy
        style 
            include ../static/style.css 
            include ../views/styleContact.css 
    body 
      nav#navbar
        ul
            div#logo
                img(src="/static/logo1.png" height='100px', width='150px' padding='10000px')
                
            li #[a(href="/home") Home]
            li #[a(href="/") About]
            li #[a(href="/") Services]
            li #[a(href="/") Class Info]
            li #[a(href="/contact") Contact Us]
        
      
    script 
        include ../static/index.js  
    block contact 
       .container 
            h3  Contact Us
            form(action="/contact", method="post", class="myForm")
                input(type="text", class="myInput", name="name",placeholder="enter your name")
                input(type="phone", class="myInput", name="phone_no",placeholder="enter your phone no.")
                input(type="email", class="myInput", name="email_ID",placeholder="enter your email ID")
                input(type="text", class="myInput", name="address",placeholder="enter your address")
                input(type="text", class="myInput", name="description",placeholder="description")
            button(class="btn")
                |submit 
